   <children>
      <GridPane layoutX="2.0" layoutY="4.0" prefHeight="304.0" prefWidth="502.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
